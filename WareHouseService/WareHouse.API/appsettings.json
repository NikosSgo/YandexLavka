{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff "
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WareHouseDb;Username=postgres;Password=password;",
    "Redis": "localhost:6379"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "warehouse-service",
    "Topics": {
      "Orders": "orders-topic",
      "WarehouseEvents": "warehouse-events-topic",
      "WarehouseCommands": "warehouse-commands-topic"
    }
  },
  "Authentication": {
    "Jwt": {
      "Issuer": "WareHouseService",
      "Audience": "WareHouseClients",
      "SecretKey": "your-super-secret-key-at-least-32-characters-long"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5000",
      "https://localhost:5000"
    ]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 60,
    "RejectionStatusCode": 429
  },
  "ApiSettings": {
    "Name": "WareHouse Service API",
    "Version": "1.0.0",
    "Description": "API для управления складскими операциями Яндекс Лавки",
    "ContactEmail": "warehouse-support@company.com",
    "EnableSwagger": true,
    "EnableHealthChecks": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}